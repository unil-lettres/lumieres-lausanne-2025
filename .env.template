# =========================================
# Environment selection
# =========================================
# One of: development | staging | production
DJANGO_ENV=development

# DEBUG:
# - development: set to 1/true/yes for verbose errors
# - staging/production: ignored by settings (forced off)
DJANGO_DEBUG=1
DJANGO_SETTINGS_MODULE=lumieres_project.settings

# =========================================
# Database (MySQL/MariaDB)
# =========================================
# If you run the DB in Docker (service name "db"), leave host/port as below.
# If you use an external DB, put its host/port here instead.
MYSQL_HOST=db
MYSQL_PORT=3306

# Schema and credentials used by Django
MYSQL_DATABASE=lumieres_lausanne
MYSQL_USER=lluser
MYSQL_PASSWORD=lluser-password

# Root password is only for the local Docker DB container (not used by Django).
# Safe to omit on staging/prod if DB is managed elsewhere.
MYSQL_ROOT_PASSWORD=toor

# =========================================
# Search (Solr / Haystack)
# =========================================
# Default points to the Docker "solr" service and "lumieres" core.
# Override if Solr is external or the core name differs.
HAYSTACK_URL=http://solr:8983/solr/lumieres

# =========================================
# Media / uploads
# =========================================
# Used by docker-compose volume mappings (Django uses MEDIA_ROOT in settings).
# Keep a relative path inside the repo to persist uploads between container runs.
MEDIA_FOLDER=./media

# =========================================
# Optional: SECRET_KEY (recommended for staging/prod)
# =========================================
# If you decide to move SECRET_KEY to env, uncomment and set a strong random value,
# then update settings.py to read it (not strictly required right now).
# SECRET_KEY=replace-with-a-long-random-string

