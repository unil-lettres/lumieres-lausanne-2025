// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "python3.12/Django5.2",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"dockerComposeFile": [
		"./docker-compose.yml",
		"../docker-compose.yml"
	],
	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "dev",
	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/workspaces",
	// Use this environment variable if you need to bind mount your local source code into a new container.
	// "remoteEnv": {
	// },
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		"phpmyadmin:80"
	],
	// Uncomment the next line if you want start specific services in your Docker Compose config.
	"runServices": [
		"dev",
		// "app",
		// "db",
		// "search",
		// "phpmyadmin"
	],
	// Use 'initialization' to run commands before the container is created.
	"initializeCommand": "make dev/init",
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "make dev/install",
	// Use 'postAttachCommand' to run commands after the container is attached.
	// "postAttachCommand": "make runserver",	
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": false,
					"editor.codeActionsOnSave": {
						"source.organizeImports": "explicit"
					},
					"editor.rulers": [
						119
					]
				},
				"isort.args": [
					"--profile",
					"black"
				],
				"flake8.args": [
					"--max-line-length=119"
				],
				"workbench.colorCustomizations": {
					"editorRuler.foreground": "#ff4081"
				}
				// "python.analysis.extraPaths": [
				// ]
			},
			"extensions": [
				"batisteo.vscode-django",
				"docker.docker",
				"junstyle.vscode-django-support",
				"ms-azuretools.vscode-docker",
				"ms-python.autopep8",
				"ms-python.black-formatter",
				"ms-python.debugpy",
				"ms-python.flake8",
				"ms-python.isort",
				"ms-python.mypy-type-checker",
				"ms-python.vscode-pylance",
				"nwgh.bandit",
				"tamasfe.even-better-toml"
			]
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}